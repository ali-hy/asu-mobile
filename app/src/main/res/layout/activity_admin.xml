<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Section: Manage Products -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manage Products"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingBottom="8dp" />

        <Button
            android:id="@+id/btnAddProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Product" />

        <Button
            android:id="@+id/btnEditProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Product"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/btnDeleteProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete Product"
            android:layout_marginTop="8dp" />

        <!-- Section: Manage Categories -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manage Categories"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingTop="16dp"
            android:paddingBottom="8dp" />

        <Button
            android:id="@+id/btnAddCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Category" />

        <Button
            android:id="@+id/btnEditCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Category"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/btnDeleteCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete Category"
            android:layout_marginTop="8dp" />

        <!-- Section: Reports -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Generate Reports"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingTop="16dp"
            android:paddingBottom="8dp" />

        <Button
            android:id="@+id/btnUserTransactions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User Transactions Report" />

        <Button
            android:id="@+id/btnSpecificDateTransactions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Specific Date Transactions Report"
            android:layout_marginTop="8dp" />

        <!-- Section: Feedback & Ratings -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Customer Feedback and Ratings"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingTop="16dp"
            android:paddingBottom="8dp" />

        <Button
            android:id="@+id/btnViewFeedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Feedback and Ratings" />

        <!-- Section: Charts -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Analytics"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingTop="16dp"
            android:paddingBottom="8dp" />

        <Button
            android:id="@+id/btnBestSellingProducts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Best Selling Products Chart" />

    </LinearLayout>
</ScrollView>
