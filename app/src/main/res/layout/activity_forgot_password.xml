<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Email input field -->
    <EditText
        android:id="@+id/etForgotEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your Email"
        android:inputType="textEmailAddress"
        android:autofillHints="emailAddress" />

    <!-- Submit email button -->
    <Button
        android:id="@+id/btnSubmitEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:contentDescription="Submit Email to Reset Password" />

    <!-- Display security question -->
    <TextView
        android:id="@+id/tvSecurityQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:paddingTop="16dp"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:text="Security Question"
        android:contentDescription="Security question based on user account" />

    <!-- Security answer input field -->
    <EditText
        android:id="@+id/etSecurityAnswer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:hint="Enter Security Answer"
        android:inputType="text"
        android:autofillHints="securityAnswer" />

    <!-- New password input field -->
    <EditText
        android:id="@+id/etNewPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:hint="Enter New Password"
        android:inputType="textPassword"
        android:autofillHints="password" />

    <!-- Reset password button -->
    <Button
        android:id="@+id/btnResetPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="Reset Password"
        android:contentDescription="Reset the password with the new input" />

</LinearLayout>
