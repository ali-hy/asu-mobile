<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dmm.ecommerceapp">

    <!-- Permissions for voice search functionality and barcode scanning -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!-- Declare camera hardware feature -->
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EcommerceApp">

        <!-- Main Activity (Launcher) -->
        <activity
            android:name=".LoginActivity"
            android:exported="true"> <!-- Explicitly specify exported -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Other Activities -->
        <activity
            android:name=".SignUpActivity"
            android:exported="false" />
        <activity
            android:name=".ForgotPasswordActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="false" />
        <activity android:name=".activities.CartActivity" />
        <activity android:name=".activities.SearchActivity" />
        <activity android:name=".activities.AdminActivity" />
        <activity android:name=".activities.AddProductActivity" />
        <activity android:name=".activities.DeleteProductActivity" />
        <activity android:name=".activities.EditProductActivity" />
        <activity android:name=".activities.AddCategoryActivity" />
        <activity android:name=".activities.EditCategoryActivity" />
        <activity android:name=".activities.DeleteCategoryActivity" />
        <activity android:name=".activities.SalesReportActivity" />
        <activity
            android:name=".CoursesActivity"
            android:exported="false" />
    </application>

</manifest>
