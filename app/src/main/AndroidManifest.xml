<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dmm.ecommerceapp">

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />



    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EcommerceApp">


        <activity android:name=".activities.SearchActivity" />

        <!-- Ensure hardware features are declared -->


        <!-- Main Activity -->
        <activity android:name=".LoginActivity"
            android:exported="true"> <!-- Explicitly specify exported -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>



        <!-- Other Activities -->
        <activity android:name=".SignUpActivity" android:exported="false" />
        <activity android:name=".ForgotPasswordActivity" android:exported="false" />
        <activity android:name=".MainActivity" android:exported="false" />

        <activity android:name=".activities.CartActivity" />




        <activity android:name=".EbooksActivity" android:exported="false" />
        <activity android:name=".CoursesActivity" android:exported="false" />
        <activity android:name=".LicensesActivity" android:exported="false" />
        <activity android:name=".GiftCardsActivity" android:exported="false" />
    </application>
</manifest>
